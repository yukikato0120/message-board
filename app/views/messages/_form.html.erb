<%= form_for @message , html:{class:'form-horizontal'} do |f| %>
        <% if @message.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
              <% @message.errors.full_messages.each do |full_message| %>
                <li>
                  <%= full_message %>
                </li>
              <% end %> 
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label for="message_name" class="col-sm-1 control-label">名前:</label>
          <div class="col-sm-11"><%= f.text_area :name , class:"form-control" %></div>
        </div>
        <div class="form-group">
          <label for="message_body" class="col-sm-1 control-label">内容:</label>
          <div class="col-sm-11"><%= f.text_area :body , class:"form-control" %></div>
        </div>
        <div class="form-group">
          <label for="message_age" class="col-sm-1 control-label">年齢:</label>
          <div class="col-sm-11"><%= f.text_field :age %></div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-sm btn-primary" ,style:"margin:10px" %>
          </div>
        </div>
<% end %>